<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@drawable/board_tab_background"
    android:onClick="onBoardTabClick" >

    <TextView
        android:id="@+id/board_tab_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/board_tab_close"
        android:ellipsize="marquee"
        android:lines="2"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/board_tab_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/board_tab_desc"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/board_tab_desc"
        android:scaleType="fitEnd"
        android:src="@drawable/green_dot"
        android:visibility="invisible" />

    <Button
        android:id="@+id/board_tab_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/board_close"
        android:onClick="onBoardCloseClick" />

</RelativeLayout>