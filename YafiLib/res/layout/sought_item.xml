<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sought_item_size"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="@dimen/sought_item_size" >

    <TextView
        android:id="@+id/sought_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center" />

    <TextView
        android:id="@+id/sought_item_rating"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center" />

    <TextView
        android:id="@+id/sought_item_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center" />

    <TextView
        android:id="@+id/sought_item_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center" />

</LinearLayout>