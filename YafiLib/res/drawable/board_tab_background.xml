<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#888"
                android:endColor="#fff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#888" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape>
            <gradient
                android:endColor="#88a"
                android:startColor="#eef"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#88a" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#888"
                android:startColor="#fff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#888" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
